{
  "gitbook": "3.1.1",
  "language": "pt",
  "structure" : {
    "summary": "INDICE.md"
  },
  "plugins" : [
    "ga",
    "git-author",
    "localized-footer",
    "simple-page-toc",
    "advanced-emoji"
  ],
  "pluginsConfig": {
    "ga": {
      "token": "UA-86166823-1"
    },
    "git-author":{
      "position": "bottom",
      "modifyTpl": "Última modificação feita por {user}, {timeStamp}",
      "createTpl": "Criada por {user}, {timeStamp}",
      "timeStampFormat": "YYYY-MM-DD HH:mm:ss"
    },
    "localized-footer": {
      "filename": "layouts/FOOTER.md"
    },
    "simple-page-toc": {
      "maxDepth": 2,
      "skipFirstH1": true
    }
  }
}
